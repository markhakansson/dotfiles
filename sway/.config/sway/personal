#
# About:
# Sway configuration for personal laptop.
#

include common

#############################
### Output configuration
#############################
#
## Monitor definitions
#
	set $OUT_BUILTIN eDP-1
	set $OUT_EXTERNAL_HDMI HDMI-A-2

#
## Wallpaper
#
	set $BG ~/Pictures/Wallpapers/default-wallpaper
	output * bg $BG fill

#
## Monitor configuration:
#
	output $OUT_BUILTIN {
    	pos 0 0
    	res 1920x1080
	}

	output $OUT_EXTERNAL_HDMI {
		pos 1920 0
		res 1920x1080
	}

#############################
### Input configuration
#############################
#
## Touchpad:
#
    input "type:touchpad" {
        natural_scroll enabled
        click_method clickfinger
        pointer_accel 0.1
        accel_profile adaptive
        dwt enabled
    }

